
<div class="d-flex">

<!-- <div class="collapse collapsing in" id="collapseResults"> -->
  <div class="cards-business" id="business-card-index">
      <h3 class="businesses-index-header">Businesses in your mile</h3>
      <% @businesses.each do |business| %>
        <%= render partial: 'businesses/business_card', locals: { business: business } %>
      <% end %>
  </div>
<!-- </div> -->


  <div id="index_map" style="width: 100%; height: 100vh; position: sticky; top: 56px;"
    data-markers="<%= @markers.to_json %>"
    data-home-marker="<%= @home_marker.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  <div class="container position-absolute filter-layer">
     <!--  <h4>Filter by:</h4> -->
      <% @categories.each do |category| %>
         <%= link_to category.name, businesses_path(query: @address, category: category.name), class: "category_btn #{"btn_active" if @category && @category.name == category.name}" %>
      <% end %>
  </div>
</div>

