<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-6">
      <div class="container-edit">
      <div><%= link_to "< Back", businesses_path %></div>
      <h1 class="text-center">Add a business</h1>
      <p class="text-center">----------</p>
      <%= simple_form_for @business do |f| %>
         <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :address, placeholder: 'Please ensure this is a valid address' %>
          <%= f.input :short_bio, placeholder: 'Give a brief intro to your business' %>
          <%= f.input :long_bio, placeholder: 'Tell us a little more about your business'%>
          <p> catagory selection goes here </p>
          <%= f.input :banner_photo, as: :file %>
          <%= f.input :avatar, as: :file %>
          <%= f.input :owner_name %>
          <%= f.input :owner_bio, placeholder: 'Tell us a little about yourself' %>
          <%= f.input :owner_photo, as: :file %>
          <%= f.input :telephone %>
          <%= f.input :email%>
          <%= f.input :opening_hours%>
          <%= f.input :website_url%>
          <%= f.input :accept_cards, as: :boolean%>
          <%= f.input :business_photos, as: :file, input_html: { multiple: true } %>
         </div>
         <div class="form-actions mb-2">
          <%= f.button :submit, class: "btn btn-flat"%>
         </div>
      <% end %>
      <br><br>
       </div>
    </div>
  </div>
</div>

